<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/Error.xhtml</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/Error.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/Error.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>админ</display-name>
        <web-resource-collection>
            <web-resource-name>админ</web-resource-name>
            <description/>
            <url-pattern>/faces/HomeAdmin.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>админ1</web-resource-name>
            <description/>
            <url-pattern>/faces/AdminCreateMaterial.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>админ2</web-resource-name>
            <description/>
            <url-pattern>/faces/AdminCreateStorekeeper.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>админ3</web-resource-name>
            <description/>
            <url-pattern>/faces/AdminEditMaterial.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>админ4</web-resource-name>
            <description/>
            <url-pattern>/faces/AdminEditStorekeeper.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>админ5</web-resource-name>
            <description/>
            <url-pattern>/faces/AdminSelectMaterial.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>админ6</web-resource-name>
            <description/>
            <url-pattern>/faces/AdminSelectStorekeeper.xhtm</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>head</display-name>
        <web-resource-collection>
            <web-resource-name>head</web-resource-name>
            <description/>
            <url-pattern>/faces/HomeHead.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>head1</web-resource-name>
            <description/>
            <url-pattern>/faces/HeadDetailsOperation.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>head2</web-resource-name>
            <description/>
            <url-pattern>/faces/HeadDetailsOrder.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>head3</web-resource-name>
            <description/>
            <url-pattern>/faces/HeadEditOrder.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>head4</web-resource-name>
            <description/>
            <url-pattern>/faces/HeadSelectOperation.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>head5</web-resource-name>
            <description/>
            <url-pattern>/faces/HeadSelectOrders.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>head</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>storekeeper</display-name>
        <web-resource-collection>
            <web-resource-name>storekeeper</web-resource-name>
            <description/>
            <url-pattern>/faces/HomeStorekeeper.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>storekeeper1</web-resource-name>
            <description/>
            <url-pattern>/faces/StorekeeperCreateOperation.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>storekeeper2</web-resource-name>
            <description/>
            <url-pattern>/faces/StorekeeperCreateOrder.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>storekeeper3</web-resource-name>
            <description/>
            <url-pattern>/faces/StorekeeperEditMaterial.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>storekeeper4</web-resource-name>
            <description/>
            <url-pattern>/faces/StorekeeperSelectMaterial.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>storekeeper</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbcRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/loginerror.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>head</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>storekeeper</role-name>
    </security-role>
</web-app>
